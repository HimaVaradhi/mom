<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/dp10"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>

    <!--<com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabIndicatorHeight="@dimen/dp0"/>-->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_margin="@dimen/dp10"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_tab_index"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/circle_yellow24"
                    android:padding="@dimen/dp10"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14" />
                <TextView
                    android:id="@+id/txt_tab_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="Product Info"
                    android:paddingRight="@dimen/dp10"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp14"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp10"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_tab_index_1"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/circle_disabled"
                    android:padding="@dimen/dp10"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14" />
                <TextView
                    android:id="@+id/txt_tab_label_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="Manufaturing Details"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:paddingRight="@dimen/dp10"
                    android:textSize="@dimen/sp14"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp10"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_tab_index_2"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/circle_disabled"
                    android:padding="@dimen/dp10"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14" />
                <TextView
                    android:id="@+id/txt_tab_label_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="Product Details"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:paddingRight="@dimen/dp10"
                    android:textSize="@dimen/sp14"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp10"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_tab_index_3"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/circle_disabled"
                    android:padding="@dimen/dp10"
                    android:text="4"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14" />
                <TextView
                    android:id="@+id/txt_tab_label_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="Additional Details"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:paddingRight="@dimen/dp10"
                    android:textSize="@dimen/sp14"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp10"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_tab_index_4"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/circle_disabled"
                    android:padding="@dimen/dp10"
                    android:text="4"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14" />
                <TextView
                    android:id="@+id/txt_tab_label_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="Product Photo"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:paddingRight="@dimen/dp10"
                    android:textSize="@dimen/sp14"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
</LinearLayout>