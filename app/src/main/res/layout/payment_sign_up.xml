<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:text="Bank account details"
            android:fontFamily="@font/baumans_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:text="Please Enter Your Bank Details"
            android:textSize="@dimen/sp14" />

        <EditText
            android:id="@+id/et_holder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/border_white_2"
            android:ellipsize="end"
            android:hint="Account holder name*"
            android:maxLines="2"
            android:padding="@dimen/dp10"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/et_account_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/border_white_2"
                android:ellipsize="end"
                android:hint="Account Number*"
                android:inputType="number"
                android:maxLines="2"
                android:padding="@dimen/dp10"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/et_ifsc_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_weight="0.5"
                android:background="@drawable/border_white_2"
                android:ellipsize="end"
                android:hint="IFSC Code*"
                android:digits="@string/alphabetNumeric"
                android:inputType="textCapCharacters"
                android:maxLines="2"
                android:maxLength="15"
                android:padding="@dimen/dp10"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/border_white_2"
            android:ellipsize="end"
            android:hint="Bank Name*"
            android:maxLines="2"
            android:padding="@dimen/dp10"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/et_branch_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/border_white_2"
            android:ellipsize="end"
            android:hint="Branch Name*"
            android:maxLines="2"
            android:padding="@dimen/dp10"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:text="Link other accounts"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

            <Spinner
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/spinner_background_3"
                android:entries="@array/payment_mode"
                android:paddingLeft="@dimen/dp10" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:text="Please Enter Your Mobile number"
            android:textSize="@dimen/sp12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@drawable/border_white_2"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:ellipsize="end"
                    android:hint="+91"
                    android:inputType="phone"
                    android:maxLines="2"
                    android:padding="@dimen/dp10"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/et_mobile_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="Enter Mobile Number*"
                    android:inputType="number"
                    android:maxLines="2"
                    android:maxLength="10"
                    android:padding="@dimen/dp10"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight="0.4"
                android:background="@drawable/border_green_1"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_send_otp_email"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dp10"
            android:background="@color/colorPrimaryDark"
            android:text="Send OTP"
            android:textColor="@color/white"
            android:visibility="gone" />


        <include layout="@layout/layout_otp_verify_2"
            android:id="@+id/ll_otp_layout"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_save_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/dp10"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_save"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/ic_cloud_computing"
                    app:tint="@color/blueColor" />

                <TextView
                    android:id="@+id/txt_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="SAVE"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>