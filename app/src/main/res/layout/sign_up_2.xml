<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:layout_gravity="end"
                android:background="@drawable/ic_background_c" />

          <!--  <ImageView
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"
                android:layout_margin="@dimen/dp10"
                android:src="@drawable/logo" />-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="160dp"
                android:src="@drawable/ellipse" />

            <ImageView
                android:layout_width="@dimen/dp200"
                android:layout_height="@dimen/dp200"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="-50dp"
                android:src="@drawable/ellipse" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="-150dp"
                android:src="@drawable/half_circle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp100"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_to_amruthashala_mums"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    android:gravity="center"
                    android:text="Amruthashala Mum is all about door delivering home-cooked meal and\nhomemade delicious which are prepared using fresh, locally sourced\nproduce in a home kitchen just like yours with authentic, regional recipes\nby real people with a person for cooking"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp10" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="Tell us where do you live"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    android:gravity="center"
                    android:text="This will help us Setup, inspection and Verification of your account"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp10" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/ll_own"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_own"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp100"
                            android:layout_margin="@dimen/dp10"
                            card_view:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/tv_own"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:layout_margin="@dimen/dp5"
                                android:text="Own House"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp12" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_independent"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_independent"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp100"
                            android:layout_margin="@dimen/dp10"
                            card_view:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/tv_independent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:layout_margin="@dimen/dp5"
                                android:text="Independent"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp12" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_apartment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_apartment"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp100"
                            android:layout_margin="@dimen/dp10"
                            android:layout_weight="1"
                            card_view:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/tv_apartment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:layout_margin="@dimen/dp5"
                                android:text="Apartment"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp12" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center"
                    android:text="Choose this option if you stay in Society or an Apartment"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp10" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:background="@drawable/edit_border"
                    android:drawableRight="@drawable/ic_search_filled"
                    android:hint="Search Appartment Name"
                    android:padding="@dimen/dp5"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center"
                    android:text="or add manually"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp12" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp150"
                    android:layout_margin="@dimen/dp10"
                    card_view:cardCornerRadius="@dimen/dp10"
                    card_view:cardElevation="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp5"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Lake View Country Appartments"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp14" />

                            <TextView
                                android:id="@+id/txt_address"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/dp5"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="3"
                                android:text="Lake View Country appartment Rd,Manipal country rd, behind Star Market,Singasandra,Bengulur,karanakata,560068"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_layout_modify"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                card_view:srcCompat="@drawable/ic_baseline_edit_24" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp10"
                                android:text="Modify"
                                android:textSize="@dimen/sp14" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_proceed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:background="@drawable/borderrectangle"
                    android:gravity="center"
                    android:text="Confirm &amp; Proceed"
                    android:textColor="@color/white" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>