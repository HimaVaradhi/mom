<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:text="Manufacturing information"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp5"
                android:text="Importer Deatils"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/borderrectanglegreen"
                android:paddingLeft="@dimen/dp15"
                android:hint="0"
                android:textSize="@dimen/sp14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp5"
                android:text="Manufacturer Deatils"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/borderrectanglegreen"
                android:paddingLeft="@dimen/dp15"
                android:hint="0"
                android:textSize="@dimen/sp14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp5"
                android:text="Packer Deatils"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/borderrectanglegreen"
                android:paddingLeft="@dimen/dp15"
                android:hint="0"
               android:textSize="@dimen/sp14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp25"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:padding="@dimen/dp10"
                    android:text="Country of Origin" />

                <Spinner
                    style="@style/mySpinnerItemStyle2"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="@dimen/dp40"
                    android:layout_margin="@dimen/dp10"
                    android:layout_weight="0.5"
                    android:background="@drawable/spinner_background_5"
                    android:entries="@array/country" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp25"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:padding="@dimen/dp10"
                    android:text="Manufacturing Date" />

                <LinearLayout
                    android:layout_width="@dimen/dp0"
                    android:layout_height="@dimen/dp40"
                    android:layout_margin="@dimen/dp5"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn_round_shape_green"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/et_manfacture_date"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp10"
                        android:focusable="false"
                        android:textSize="@dimen/sp14"
                        android:hint="0" />

                    <ImageView
                        android:id="@+id/img_date"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/btn_round_shape_one_side"
                        android:gravity="center"
                        android:padding="@dimen/dp10"
                        app:srcCompat="@drawable/ic_date_range_black_24dp"
                        app:tint="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp25"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:padding="@dimen/dp10"
                    android:text="Shelf Life*" />

                <LinearLayout
                    android:layout_width="@dimen/dp0"
                    android:layout_height="@dimen/dp40"
                    android:layout_margin="@dimen/dp5"
                    android:layout_weight="0.5"
                    android:weightSum="1"
                    android:background="@drawable/btn_round_shape_green">

                    <EditText
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp10"
                        android:hint="0"
                        android:textSize="@dimen/sp14"
                        android:inputType="phone"/>

                    <Spinner
                        style="@style/mySpinnerItemStyle3"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:background="@drawable/spinner_background_6"
                        android:entries="@array/shelf" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>