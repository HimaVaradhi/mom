<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <item>

        <layer-list android:layout_height="wrap_content">

            <item>
                <shape
                    android:shape="rectangle">
                    <solid android:color="#4CAF50" />
                    <stroke
                        android:width="1dp"
                        android:color="#4CAF50" />
                    <corners android:radius="5dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/down_rect_white"
                android:gravity="center_vertical|right"
                android:top="@dimen/dp10"
                android:left="@dimen/dp10"
                android:right="@dimen/dp10"
                android:bottom="@dimen/dp10"
                android:height="@dimen/dp10"
                />


        </layer-list>

    </item>

</selector>
